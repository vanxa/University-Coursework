;  Parity masks
;------------------------------------
UART_PARITY_NONE:       equ   00h
UART_PARITY_EVEN:       equ   02h
UART_PARITY_ODD:        equ   06h

;------------------------------------
;  TX Status Register masks
;------------------------------------
UART_TX_COMPLETE:       equ   20h
UART_TX_BUFFER_EMPTY:   equ   10h

;------------------------------------
;  RX Status Register masks
;------------------------------------
UART_RX_ACTIVE:         equ   10h
UART_RX_COMPLETE:       equ   08h
UART_RX_PARITY_ERROR:   equ   80h
UART_RX_OVERRUN_ERROR:  equ   40h
UART_RX_FRAMING_ERROR:  equ   20h
UART_RX_NO_ERROR:       equ   E0h
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;             END WARNING
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;



;------------------------------------
;  Parity masks
;------------------------------------
serial_uart_PARITY_NONE:                equ   00h
serial_uart_PARITY_EVEN:                equ   02h
serial_uart_PARITY_ODD:                 equ   06h

;------------------------------------
;  TX Status Register masks
;------------------------------------
serial_uart_TX_COMPLETE:                equ   20h
serial_uart_TX_BUFFER_EMPTY:            equ   10h

;------------------------------------
;  RX Status Register masks
;------------------------------------
serial_uart_RX_ACTIVE:                  equ   10h
serial_uart_RX_COMPLETE:                equ   08h
serial_uart_RX_REG_FULL:                equ   08h
serial_uart_RX_PARITY_ERROR:            equ   80h
serial_uart_RX_OVERRUN_ERROR:           equ   40h
serial_uart_RX_FRAMING_ERROR:           equ   20h
serial_uart_RX_ERROR:                   equ   E0h
serial_uart_RX_ENABLE:                  equ   01h

serial_uart_RX_BUF_ERROR:               equ   F0h  ; Mask for any Rx that may occur.
serial_uart_RX_BUF_OVERRUN:             equ   10h  ; This indicates the software buffer has
                                                        ; been over run.
serial_uart_RX_BUF_CMDTERM:             equ   01h  ; Command terminator has been received.

serial_uart_RX_NO_DATA:                 equ   01h
serial_uart_RX_NO_ERROR:                equ   E0h


;--------------------------------------------------
; Registers Address Constants for serial_uart
;--------------------------------------------------
;---------------------------------
;  Registers used by TX
;---------------------------------
serial_uart_TX_CONTROL_REG: equ 4bh            ; Control register
serial_uart_TX_SHIFT_REG:   equ 48h               ; TX Shift Register register
serial_uart_TX_BUFFER_REG:  equ 49h               ; TX Buffer Register
serial_uart_TX_FUNC_REG:    equ 48h     ; Function register
serial_uart_TX_INPUT_REG:   equ 49h            ; Input register
serial_uart_TX_OUTPUT_REG:  equ 4ah           ; Output register

;---------------------------------
;  Registers used by RX
;---------------------------------
serial_uart_RX_CONTROL_REG: equ 4fh            ; Control register
serial_uart_RX_SHIFT_REG:   equ 4ch               ; RX Shift Register register
serial_uart_RX_BUFFER_REG:  equ 4eh               ; RX Buffer Register
serial_uart_RX_FUNC_REG:    equ 4ch     ; Function register
serial_uart_RX_INPUT_REG:   equ 4dh            ; Input register
serial_uart_RX_OUTPUT_REG:  equ 4eh           ; Output register

