;--------------------------------------------------
; Constants for serial_uart API's
;--------------------------------------------------

;mask value for global int reg bit for TX instance
serial_uart_TX_INT_MASK:                     equ 0x04
serial_uart_TX_INT_REG:                      equ 0x0df  ;TX interrupt address
serial_uart_RX_INT_MASK:                     equ 0x08  ;mask value for global int reg bit for RX instance
serial_uart_RX_INT_REG:                      equ 0x0df  ;RX interrupt address

serial_uart_RXBUF_ENABLE:                    equ 0

; Interrupt control masks
serial_uart_ENABLE_RX_INT:                   equ 0x01
serial_uart_DISABLE_RX_INT:                  equ 0x00
serial_uart_ENABLE_TX_INT:                   equ 0x02
serial_uart_DISABLE_TX_INT:                  equ 0x00

serial_uart_INT_MODE_TX_REG_EMPTY:           equ 0x00
serial_uart_INT_MODE_TX_COMPLETE:            equ 0x01

serial_uart_RX_IGNORE_BELOW:                 equ 0x20
serial_uart_RX_BUFFER_SIZE:                  equ 0x30
serial_uart_CMD_TERM:                        equ 0xd
serial_uart_DELIMITER:                       equ 0x20
serial_uart_BACKSPACE_ENABLE:                equ 0x0

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
